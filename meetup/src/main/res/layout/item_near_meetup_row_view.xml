<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
				name="bindingModel"
				type="com.meetups.kuxu.meetup.ui.bindingModel.MeetupRowBindingModel"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_margin="5dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView
				android:id="@+id/event_title_app_compat_text_view"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@{bindingModel.meetupTitle}"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:textSize="16sp"
				android:lines="1"
				android:ellipsize="end"
				tools:text="イベントタイトル~~~~"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"/>

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/distance_appcompat_text_view"
				android:text="@{bindingModel.distance}"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				tools:text="1000km" android:layout_marginTop="8dp"
				app:layout_constraintTop_toBottomOf="@+id/event_title_app_compat_text_view"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/event_url_app_compat_text_view"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				tools:text="https://connpass.com/226292"
				android:text="@{bindingModel.meetupUrl}"
				android:lines="1"
				android:ellipsize="end"
				android:textSize="14sp" android:layout_marginEnd="8dp"
				app:layout_constraintEnd_toEndOf="@+id/event_title_app_compat_text_view"
				app:layout_constraintStart_toEndOf="@+id/distance_appcompat_text_view"
				android:layout_marginStart="8dp"
				app:layout_constraintTop_toTopOf="@+id/distance_appcompat_text_view"
				app:layout_constraintBottom_toBottomOf="@+id/distance_appcompat_text_view"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>