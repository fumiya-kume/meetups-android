<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".ui.permission.PermissionErrorFragment">
		<TextView
				android:id="@+id/warning_app_usase_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="権限を許可しないとアプリを使うことができません..."
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="8dp"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toTopOf="@+id/navigate_app_setting_material_button"
				app:layout_constraintVertical_chainStyle="packed"/>

		<com.google.android.material.button.MaterialButton
				android:id="@+id/navigate_app_setting_material_button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="設定アプリで権限を変更する"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="8dp"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
				app:layout_constraintTop_toBottomOf="@+id/warning_app_usase_text_view" android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toBottomOf="parent"/>

		<TextView
				android:id="@+id/location_permission_text_view"
				android:text="必要な時に現在地を取得します"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				app:layout_constraintBottom_toBottomOf="@+id/location_permission_material_button"
				app:layout_constraintTop_toTopOf="@+id/location_permission_material_button"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

		<com.google.android.material.button.MaterialButton
				android:id="@+id/location_permission_material_button"
				style="@style/Widget.MaterialComponents.Button.TextButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toBottomOf="@+id/navigate_app_setting_material_button"
				android:text="権限を許可する"
		/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>