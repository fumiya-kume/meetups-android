<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<com.google.android.material.appbar.AppBarLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<androidx.appcompat.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:title="イベント一覧"/>
		</com.google.android.material.appbar.AppBarLayout>


		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/near_row_recycler_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				tools:listitem="@layout/item_near_meetup_row_view"
				android:layout_marginTop="8dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

		<com.google.android.material.card.MaterialCardView
				android:id="@+id/search_near_meetup_bottom_sheet"
				android:padding="8dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_behavior="@string/bottom_sheet_behavior"
				app:behavior_peekHeight="150dp"
				android:background="@android:color/darker_gray"
				app:cardCornerRadius="18dp"
				app:behavior_hideable="true"
				android:elevation="8dp">

			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:id="@+id/lat_text_view"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:text="緯度:"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
				<TextView
						android:id="@+id/lat_result_text_view"
						android:text="取得中..."
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						tools:text="35.680236100000"
						app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
						app:layout_constraintStart_toEndOf="@+id/lat_text_view" android:layout_marginStart="8dp"
						app:layout_constraintBottom_toBottomOf="@+id/lat_text_view"
						app:layout_constraintTop_toTopOf="@+id/lat_text_view"
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

				<TextView
						android:id="@+id/lon_text_view"
						android:text="経度"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/lat_text_view"
						android:layout_marginTop="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
				<TextView
						android:id="@+id/lon_result_text_view"
						android:layout_width="0dp"
						android:text="取得中..."
						tools:text="139.701308500000"
						android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
						android:layout_marginEnd="8dp"
						app:layout_constraintStart_toEndOf="@+id/lon_text_view"
						android:layout_marginStart="8dp"
						app:layout_constraintTop_toTopOf="@+id/lon_text_view"
						app:layout_constraintBottom_toBottomOf="@+id/lon_text_view"
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

				<com.google.android.material.button.MaterialButton
						android:padding="5dp"
						android:id="@+id/search_near_meetup_material_button"
						android:layout_width="wrap_content"
						android:layout_height="48dp"
						android:text="近くにある勉強会を検索する"
						android:layout_marginEnd="8dp"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						android:layout_marginStart="8dp"
						app:layout_constraintTop_toBottomOf="@+id/lon_result_text_view"
						android:layout_marginTop="8dp"/>
			</androidx.constraintlayout.widget.ConstraintLayout>

		</com.google.android.material.card.MaterialCardView>


	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>